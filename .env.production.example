# ===========================================
# CleanSpace Pro - Production Configuration
# ===========================================
# Copy this file to .env in production and fill in actual values
# SECURITY: Never commit .env file to git!

# -----------------
# Server Configuration
# -----------------
PORT=3000
NODE_ENV=production

# For production behind reverse proxy (nginx/apache)
# TRUST_PROXY=true

# -----------------
# Database
# -----------------
# Production database path (ensure directory exists with proper permissions)
DB_PATH=/var/lib/cleanspace-pro/cleanspace.db

# Optional: Database backup path
# DB_BACKUP_PATH=/var/backups/cleanspace-pro/

# -----------------
# Security & CORS
# -----------------
# Production domain (replace with your actual domain)
CORS_ORIGIN=https://yourdomain.com

# Rate limiting (adjust based on traffic)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-random-session-secret-here

# -----------------
# AI Agent Configuration
# -----------------
# Groq API key (get from: https://console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Default AI variant (baseline, professional, casual)
DEFAULT_VARIANT=baseline

# -----------------
# Email Configuration
# -----------------
# SMTP settings for customer notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-business-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=info@cleanspacepro.com

# -----------------
# Business Information
# -----------------
BUSINESS_NAME=CleanSpace Pro
BUSINESS_EMAIL=info@cleanspacepro.com
BUSINESS_PHONE=(555) 123-4567
BUSINESS_ADDRESS=123 Main St, Your City, ST 12345

# -----------------
# Cost Optimization
# -----------------
# Budget limits (USD)
DAILY_BUDGET_LIMIT=10.00
MONTHLY_BUDGET_LIMIT=300.00
PER_REQUEST_BUDGET_LIMIT=0.01

# Token limits
MAX_INPUT_TOKENS=2000
MAX_OUTPUT_TOKENS=500
MAX_TOTAL_TOKENS=2500

# Optimization strategy (cost_optimized, performance_optimized, balanced)
OPTIMIZATION_STRATEGY=cost_optimized

# -----------------
# Monitoring & Logging
# -----------------
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path (optional)
LOG_FILE_PATH=/var/log/cleanspace-pro/app.log

# Enable/disable specific logging
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_LOGS=true
ENABLE_METRIC_LOGS=true

# -----------------
# Safety & Compliance
# -----------------
# Enable PII detection and redaction
ENABLE_PII_DETECTION=true
ENABLE_PII_REDACTION=true

# Enable jailbreak detection
ENABLE_JAILBREAK_DETECTION=true

# Enable content safety filtering
ENABLE_CONTENT_SAFETY=true

# -----------------
# Performance
# -----------------
# Response cache TTL (seconds)
CACHE_TTL=3600

# Enable response caching
ENABLE_RESPONSE_CACHE=true

# Circuit breaker settings
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# -----------------
# Canary Deployment
# -----------------
# Enable automatic canary promotions
CANARY_AUTO_PROMOTE=true

# Enable automatic rollback on failures
CANARY_AUTO_ROLLBACK=true

# Health check thresholds
CANARY_MAX_ERROR_RATE=0.05
CANARY_MAX_LATENCY_INCREASE=0.5
CANARY_MAX_COST_INCREASE=0.3

# -----------------
# Optional Integrations
# -----------------
# Slack webhook for alerts (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Sentry for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn

# New Relic for APM (optional)
# NEW_RELIC_LICENSE_KEY=your-license-key
# NEW_RELIC_APP_NAME=CleanSpace Pro

# -----------------
# Backup & Recovery
# -----------------
# Enable automatic database backups
ENABLE_AUTO_BACKUP=true

# Backup interval (hours)
BACKUP_INTERVAL_HOURS=24

# Backup retention (days)
BACKUP_RETENTION_DAYS=30
