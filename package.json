{
  "name": "cleanspace-pro-backend",
  "version": "1.0.0",
  "description": "Backend API for CleanSpace Pro cleaning service website",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "./scripts/production-start.sh",
    "deploy:check": "npm test && npm run lint",
    "deploy:install": "npm ci --production",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "cleaning",
    "service",
    "api",
    "express",
    "nodejs"
  ],
  "author": "CleanSpace Pro",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.0.1",
    "groq-sdk": "^0.33.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.9",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
